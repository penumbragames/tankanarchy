{
  "name": "tankanarchy",
  "version": "3.0.0",
  "description": "A multiplayer tank battle arena game",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "start": "bun run ./src/server.ts",
    "dev": "bun run --watch ./src/server.ts",
    "build": "npm run build:client",
    "build:client": "npm run tsc && npm run html && npm run less",
    "tsc": "bun build ./src/client.ts --outdir ./dist",
    "html": "cp ./html/index.html dist/index.html",
    "less": "lessc ./less/styles.less ./dist/css/styles.css",
    "clean": "rm -rf dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penumbragames/tankanarchy.git"
  },
  "author": "Alvin Lin (omgimanerd)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/penumbragames/tankanarchy/issues"
  },
  "homepage": "https://github.com/penumbragames/tankanarchy#readme",
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/morgan": "^1.9.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^4.2.5",
    "less": "^4.4.2",
    "prettier": "^2.8.8"
  },
  "dependencies": {
    "express": "^4.21.2",
    "morgan": "^1.10.1",
    "pug": "^3.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socket.io-parser": "^4.2.4",
    "typescript": "^4.9.5"
  }
}